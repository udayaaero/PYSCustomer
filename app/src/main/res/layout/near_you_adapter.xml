<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:padding="8dp"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:background="@color/white"
    android:id="@+id/SelectChard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:background="@drawable/gymslide"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <TextView
            android:layout_marginStart="5dp"
            android:layout_below="@+id/image"
            android:id="@+id/NameOfVendor"
            android:text="Name Of Vendor"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/NameOfVendor"
            android:id="@+id/AdressOfVendor"
            android:text="Adress Of Vendor"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="65dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>