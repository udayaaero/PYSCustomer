<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:id="@+id/SelectedLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fdfdfd"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="DisableBaselineAlignment,UselessParent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/aerobics"
            android:layout_width="80dp"
            android:layout_height="70dp"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/block"
                android:textSize="16sp"
                android:id="@+id/personcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@color/block"
                android:textSize="14sp"
                android:text="Person"
                tools:ignore="HardcodedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/block"
                android:textSize="14sp"
                android:id="@+id/vendorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@color/block"
                android:textSize="14sp"
                android:id="@+id/subActivityType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@color/block"
                android:textSize="14sp"
                android:id="@+id/amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:id="@+id/otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView

                android:textStyle="bold"
                android:layout_gravity="bottom"
               android:textColor="@color/green"
               android:textSize="12sp"
               android:id="@+id/bookingStatusss"
               android:text="booking Status"
                tools:ignore="HardcodedText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            </LinearLayout>


    </LinearLayout>
        <LinearLayout
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="end"
                android:textColor="@color/block"
                android:textSize="14sp"
                android:id="@+id/booedforDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:textColor="@color/block"
                android:textSize="14sp"
                android:id="@+id/bookingtimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView

                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:id="@+id/memberType"
                    android:text="Membership"
                    tools:ignore="HardcodedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <Button
                android:gravity="center"
                android:layout_gravity="bottom"
                android:textColor="@color/white"
                android:background="@drawable/coursebtnbg1"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:text="Cancel"
                tools:ignore="HardcodedText"
                android:id="@+id/cancelSlot"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>