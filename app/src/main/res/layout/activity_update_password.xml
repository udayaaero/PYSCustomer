<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundmain"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true">
    <ScrollView
        android:layout_gravity="center"
        android:background="#99FE9C03"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/lockimage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:id="@+id/forgotLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Enter Your Mobile Number"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/backedittext"
                        android:textColorHint="#b9beb9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <EditText
                            android:layout_gravity="center"
                            android:background="@color/fui_transparent"
                            android:inputType="textNoSuggestions"
                            android:singleLine="true"
                            android:id="@+id/mMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile Number"
                            android:textColor="#b9beb9"
                            tools:ignore="HardcodedText" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                <TextView
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Enter Your New PassWord"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/backedittext"
                        android:textColorHint="#b9beb9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <EditText
                            android:layout_gravity="center"
                            android:background="@color/fui_transparent"
                            android:inputType="textNoSuggestions"
                            android:singleLine="true"
                            android:id="@+id/newPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:textColor="#b9beb9"
                            tools:ignore="HardcodedText,TextFields" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <Button
                    android:padding="5dp"
                    android:drawableRight="@drawable/ic_cached_black_24dp"
                    android:layout_gravity="center"
                    android:id="@+id/recover"
                    android:background="@drawable/backbutton"
                    android:layout_marginTop="20dp"
                    android:text="Recover"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>