<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundmain"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true">
    <ScrollView
        android:layout_gravity="center"
        android:background="#99FE9C03"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/lockimage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                tools:ignore="ContentDescription" />
        <LinearLayout
            android:id="@+id/forgotLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="@string/Forgot_Your_Password"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />
            <TextView
                android:textSize="12sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="@string/Forgot_Your_Password_Message"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/backedittext"
                    android:textColorHint="#b9beb9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <EditText

                        android:layout_gravity="center"
                        android:background="@color/fui_transparent"
                        android:inputType="textNoSuggestions"
                        android:singleLine="true"
                        android:id="@+id/Emails1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email/Mobile Number"
                        android:textColor="#b9beb9"
                        tools:ignore="HardcodedText,TextFields" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <Button
                android:padding="5dp"
                android:drawableRight="@drawable/ic_cached_black_24dp"
                android:layout_gravity="center"
                android:id="@+id/recover"
                android:background="@drawable/backbutton"
                android:layout_marginTop="20dp"
                android:text="Recover"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_width="120dp"
                android:layout_height="35dp"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/submitLayout"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
             android:layout_gravity="center"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Enter OTP"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
             <EditText
                 android:id="@+id/otp"
                android:layout_gravity="center"
                 android:background="@drawable/backedittext"
                 android:textColor="@color/colorPrimary"
                 android:gravity="center"
                 android:textSize="18dp"
                 android:layout_weight="1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 tools:ignore="InefficientWeight,LabelFor,SpUsage,TextFields" />
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
               android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                  android:layout_gravity="center"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="Enter MobileNumber"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/mobile"
                    android:background="@drawable/backedittext"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="LabelFor,TextFields" />
            </LinearLayout>
            <Button
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/Submit"
                android:background="@drawable/backbutton"
                android:layout_marginTop="20dp"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_width="120dp"
                android:layout_height="35dp"
                tools:ignore="HardcodedText" />
         <!--   <Button
                android:padding="5dp"
                android:layout_gravity="right"
                android:id="@+id/back"
                android:background="@drawable/backbutton"
                android:layout_marginTop="20dp"
                android:text="Back"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_width="80dp"
                android:layout_height="30dp" />-->
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

