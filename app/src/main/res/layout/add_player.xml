<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:weightSum="2"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_weight="1.5"
                    android:textColor="#c01402"
                    android:textSize="22sp"
                    android:text="Want to add Gurav kumar 2?"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="30dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/skipBtn"
                        android:textStyle="bold"
                        android:background="@drawable/ic_close_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:text="Please enter Last 5-digits of Gurav kumar 2's mobile number to add him to your team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="DisableBaselineAlignment,UselessParent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:src="@drawable/aerobics"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    tools:ignore="ContentDescription"
                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="5dp"
                    android:layout_weight="1.4"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="SenthilKumar"
                        android:textStyle="bold"
                        android:textColor="@color/block"
                        android:textSize="14sp"
                        android:id="@+id/vendorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#c01402"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:text="Enter last 5-digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        <Button
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="ADD"
            android:layout_marginTop="10dp"
            android:background="@drawable/backbuttonblue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>