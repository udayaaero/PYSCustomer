<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@drawable/backgroundmain"
    tools:context="com.coeuz.pyscustomer.FilterActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:paddingStart="5dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:id="@+id/radioGroup1"
        tools:ignore="UselessParent">
        <RadioButton
            android:paddingStart="5dp"
            android:button="@drawable/radiobtnmale"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/radioMale"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <RadioButton
            android:paddingStart="5dp"
            android:button="@drawable/radiobtnmale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/radioFemale"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="14sp"
            android:layout_weight="1"
            tools:ignore="HardcodedText,RtlSymmetry" />
        <RadioButton
            android:paddingStart="5dp"
            android:button="@drawable/radiobtnuni"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Unisex"
            android:id="@+id/radioUnisex"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="14sp"
            android:layout_weight="1"
            tools:ignore="HardcodedText,RtlSymmetry" />
    </RadioGroup>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView

        android:paddingStart="5dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Pick one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:id="@+id/radioGroup2"
                tools:ignore="UselessParent">

                <RadioButton
                    android:paddingStart="5dp"
                    android:button="@drawable/radiobtnfemale"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Low - High"
                    android:id="@+id/radioLow"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <RadioButton
                    android:paddingStart="5dp"
                    android:button="@drawable/radiobtnfemale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="High - Low"
                    android:id="@+id/radioHigh"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText,RtlSymmetry" />

            </RadioGroup>
        </LinearLayout>
    </android.support.v7.widget.CardView>

<LinearLayout
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView

        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Consultation Fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <TextView
       android:gravity="right"
        android:layout_marginStart="100dp"
        android:id="@+id/progressValue"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlHardcoded" />
</LinearLayout>
    <SeekBar
        android:layout_marginTop="20dp"
        android:id="@+id/simpleSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000"
        android:progress="50"
        android:progressDrawable="@drawable/custom_progress"/>
    <TextView

        android:paddingStart="5dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Pick one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:id="@+id/radioGroup3"
                tools:ignore="UselessParent">

                <RadioButton
                    android:layout_marginTop="5dp"
                    android:paddingStart="5dp"
                    android:layout_weight="1"
                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="    0 - 200 INR"
                    android:id="@+id/amount1"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <RadioButton
                    android:layoutDirection="rtl"
                    android:layout_marginTop="5dp"
                    android:paddingStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="200 - 300 INR"
                    android:id="@+id/amount2"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText,RtlSymmetry" />
                <RadioButton
                    android:layoutDirection="rtl"
                    android:layout_marginTop="5dp"
                    android:paddingStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="300 - 400 INR"
                    android:id="@+id/amount3"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText,RtlSymmetry" />
                <RadioButton
                    android:layoutDirection="rtl"
                    android:layout_marginTop="5dp"
                    android:paddingStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="400 - 500 INR"
                    android:id="@+id/amount4"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText,RtlSymmetry" />
            </RadioGroup>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView

        android:paddingStart="5dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Amenities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlSymmetry" />
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
       <android.support.v7.widget.RecyclerView
           android:id="@+id/recyclerList"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
       </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>
