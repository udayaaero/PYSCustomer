<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"
    xmlns:wheel="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/noValuesLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:background="@drawable/novalues"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="No Values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/allViewlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressbar300"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:indeterminateDrawable="@drawable/my_progress_indeterminate"
            android:layout_height="100dp"
            android:layout_width="100dp">
        </ProgressBar>
  <android.support.v7.widget.CardView
      android:id="@+id/firstView"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
  <LinearLayout

      android:layout_marginBottom="10dp"
      android:layout_marginTop="10dp"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:weightSum="2"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:gravity="center"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="wrap_content">
              <ImageView
                  android:background="@drawable/course"
                  android:layout_width="100dp"
                  android:layout_height="100dp" />
          </LinearLayout>

      <LinearLayout
          android:gravity="center"
          android:layout_weight="1"
          android:layout_gravity="center"
          android:padding="5dp"
          android:orientation="vertical"
          android:layout_width="0dp"
          android:layout_height="wrap_content">

          <TextView
              android:textStyle="bold"
              android:id="@+id/membershipType"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:layout_marginTop="10dp"
              android:id="@+id/bookingCost"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </LinearLayout>
      </LinearLayout>
      <Button
          android:layout_marginTop="5dp"
          android:id="@+id/getMoreDetails"
          android:textAllCaps="false"
          android:padding="5dp"
          android:background="@drawable/backbutton"
          android:textColor="@color/white"
          android:text="Get more details"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
  </LinearLayout>

  </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:id="@+id/SecondView"
            android:layout_below="@+id/firstView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout

                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:background="@drawable/course"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"
                                android:id="@+id/vendorName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/ActivityType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/bookingStatus"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/bookedforDate"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="20sp"
                                    android:id="@+id/personCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="15sp"
                                    android:text="Person"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_weight="1.5"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="14sp"
                                    android:id="@+id/bookingtimeStamp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                    </LinearLayout>

                <Button
                    android:id="@+id/backBtn"
                    android:textAllCaps="false"
                    android:padding="5dp"
                    android:background="@drawable/backbutton"
                    android:textColor="@color/white"
                    android:text="Back"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/NoInternetLayout"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_marginBottom="20dp"
            android:background="@drawable/nointernetbg"
            android:layout_width="200dp"
            android:layout_height="200dp">

        </ImageView>
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="No  Internet  Connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/TryAgain"
            android:layout_marginTop="30dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:background="@color/colorPrimaryDark"
            android:text="Try Again"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="20dp" />
    </LinearLayout>


</RelativeLayout>
